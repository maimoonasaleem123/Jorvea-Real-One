<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Trust all certificates for development and production -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow all domains for HLS streaming -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">digitaloceanspaces.com</domain>
        <domain includeSubdomains="true">cdn.digitaloceanspaces.com</domain>
        <domain includeSubdomains="true">blr1.digitaloceanspaces.com</domain>
        <domain includeSubdomains="true">blr1.cdn.digitaloceanspaces.com</domain>
        <domain includeSubdomains="true">ondigitalocean.app</domain>
    </domain-config>
</network-security-config>
