rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public read for all files (CDN delivery)
    match /{allPaths=**} {
      allow read: if true;
    }

    // Reel videos - authenticated users can upload
    match /reels/{videoId} {
      allow write: if request.auth != null 
        && request.resource.size < 500 * 1024 * 1024; // Max 500 MB
      allow read: if true; // Public read for streaming
    }

    // HLS files - only Cloud Function can write, everyone can read
    match /reels/hls/{videoId}/{allPaths=**} {
      allow read: if true; // Public read for streaming
      allow write: if false; // Only Cloud Function writes here
    }

    // Thumbnails
    match /thumbnails/{imageId} {
      allow write: if request.auth != null;
      allow read: if true;
    }

    // User profile pictures
    match /profiles/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if true;
    }

    // Posts media
    match /posts/{postId}/{allPaths=**} {
      allow write: if request.auth != null;
      allow read: if true;
    }

    // Stories
    match /stories/{storyId} {
      allow write: if request.auth != null;
      allow read: if true;
    }
  }
}
